<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardOrgRootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardTeamMainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="10dp">

        <!-- TODO: Create Schedule Card instead of Review Card -->

        <TextView
            android:id="@+id/cardTeamTxtTitle"
            android:layout_width="0dp"
            android:layout_height="37dp"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:paddingStart="15dp"
            android:text="Team Name"
            android:textAlignment="viewStart"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cardTeamTxtTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Alabama State League"
            app:layout_constraintBottom_toBottomOf="@+id/cardTeamImgIconOne"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.017"
            app:layout_constraintStart_toEndOf="@+id/cardTeamImgIconOne"
            app:layout_constraintTop_toTopOf="@+id/cardTeamImgIconOne"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/cardTeamTxtOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="4dp"
            android:text="www.ussoccer.com"
            app:layout_constraintBottom_toTopOf="@+id/cardTeamTxtTwo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.013"
            app:layout_constraintStart_toEndOf="@+id/cardTeamImgIconTwo"
            app:layout_constraintTop_toTopOf="@+id/cardTeamImgIconTwo"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/cardTeamImgMainIcon"
            android:layout_width="84dp"
            android:layout_height="94dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardTeamTxtTitle"
            app:layout_constraintVertical_bias="0.733"
            app:srcCompat="@drawable/download" />

        <ImageView
            android:id="@+id/cardTeamImgIconTwo"
            android:layout_width="15dp"
            android:layout_height="16dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/cardTeamImgIconOne"
            app:layout_constraintStart_toEndOf="@+id/cardTeamImgMainIcon"
            app:srcCompat="@drawable/ysr_world_icon_red" />

        <ImageView
            android:id="@+id/cardTeamImgIconOne"
            android:layout_width="15dp"
            android:layout_height="19dp"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/cardTeamImgMainIcon"
            app:layout_constraintEnd_toEndOf="@+id/cardTeamImgIconTwo"
            app:layout_constraintStart_toEndOf="@+id/cardTeamImgMainIcon"
            app:srcCompat="@drawable/ysr_location_icon_red" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>