<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ysrTxtItemFieldName"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:gravity="bottom"
        android:text="Field Name"
        app:layout_constraintEnd_toStartOf="@+id/ysrEditItemFieldValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ysrEditItemFieldValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:gravity="bottom"
        android:inputType="textPersonName"
        android:lines="1"
        android:singleLine="false"
        android:text="Value"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/ysrTxtItemFieldName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ysrTxtItemFieldName" />
</androidx.constraintlayout.widget.ConstraintLayout>