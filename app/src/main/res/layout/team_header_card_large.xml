<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardOrgRootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardTeamMediumMainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="10dp">

        <TextView
            android:id="@+id/cardTeamMediumTxtTitle"
            android:layout_width="0dp"
            android:layout_height="37dp"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:paddingStart="15dp"
            android:text="Team Name"
            android:textAlignment="viewStart"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/cardTeamMediumTxtTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Alabama State League"
            app:layout_constraintBottom_toBottomOf="@+id/cardTeamMediumImgIconOne"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.017"
            app:layout_constraintStart_toEndOf="@+id/cardTeamMediumImgIconOne"
            app:layout_constraintTop_toTopOf="@+id/cardTeamMediumImgIconOne"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/cardTeamMediumTxtOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="4dp"
            android:text="www.ussoccer.com"
            app:layout_constraintBottom_toTopOf="@+id/cardTeamMediumTxtTwo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.013"
            app:layout_constraintStart_toEndOf="@+id/cardTeamMediumImgIconTwo"
            app:layout_constraintTop_toTopOf="@+id/cardTeamMediumImgIconTwo"
            app:layout_constraintVertical_bias="0.0" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cardTeamMediumImgMainIcon"
            android:layout_width="84dp"
            android:layout_height="94dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardTeamMediumTxtTitle"
            app:layout_constraintVertical_bias="0.733"
            app:srcCompat="@drawable/download" />

        <ImageView
            android:id="@+id/cardTeamMediumImgIconTwo"
            android:layout_width="15dp"
            android:layout_height="16dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/cardTeamMediumImgIconOne"
            app:layout_constraintStart_toEndOf="@+id/cardTeamMediumImgMainIcon"
            app:srcCompat="@drawable/ysr_world_icon_red" />

        <ImageView
            android:id="@+id/cardTeamMediumImgIconTwo2"
            android:layout_width="15dp"
            android:layout_height="16dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/cardTeamMediumImgIconTwo"
            app:layout_constraintEnd_toStartOf="@+id/cardTeamMediumTxtAgeGroup"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/cardTeamMediumImgMainIcon"
            app:srcCompat="@drawable/ysr_world_icon_red" />

        <ImageView
            android:id="@+id/cardTeamMediumImgIconTwo3"
            android:layout_width="15dp"
            android:layout_height="16dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/cardTeamMediumImgIconTwo2"
            app:layout_constraintEnd_toStartOf="@+id/cardTeamMediumTxtCoachesName"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/cardTeamMediumImgMainIcon"
            app:layout_constraintTop_toTopOf="@+id/cardTeamMediumImgMainIcon"
            app:srcCompat="@drawable/ysr_world_icon_red" />

        <ImageView
            android:id="@+id/cardTeamMediumImgIconOne"
            android:layout_width="15dp"
            android:layout_height="19dp"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/cardTeamMediumImgMainIcon"
            app:layout_constraintEnd_toEndOf="@+id/cardTeamMediumImgIconTwo"
            app:layout_constraintStart_toEndOf="@+id/cardTeamMediumImgMainIcon"
            app:srcCompat="@drawable/ysr_location_icon_red" />

        <TextView
            android:id="@+id/cardTeamMediumTxtCoachesName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:text="Coaches Name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/cardTeamMediumImgMainIcon"
            app:layout_constraintTop_toTopOf="@+id/cardTeamMediumImgMainIcon" />

        <TextView
            android:id="@+id/cardTeamMediumTxtAgeGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="2010 - U13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/cardTeamMediumTxtCoachesName"
            app:layout_constraintTop_toBottomOf="@+id/cardTeamMediumTxtCoachesName" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>