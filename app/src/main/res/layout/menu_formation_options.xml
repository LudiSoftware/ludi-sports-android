<?xml version="1.0" encoding="utf-8"?>
<!-- popup_layout.xml -->
<io.usys.report.ui.views.LudiConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/menuFormationSaveDataLayout"
        android:layout_width="214dp"
        android:layout_height="50dp"
        android:layout_margin="3dp"
        android:background="@drawable/border_shape"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/menuFormationSaveDataTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight=".75"
            android:gravity="center"
            android:text="Save Player Data" />

        <ImageButton
            android:id="@+id/menuFormationSaveDataBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight=".25"
            android:background="#00FFFFFF"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/f_profile_dark" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menuFormationSubmitRosterLayout"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="3dp"
        android:background="@drawable/border_shape"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuFormationSaveDataLayout"
        tools:visibility="visible">

        <TextView
            android:id="@+id/menuFormationSubmitRosterTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight=".75"
            android:gravity="center"
            android:hapticFeedbackEnabled="true"
            android:text="Submit Roster" />

        <ImageButton
            android:id="@+id/menuFormationSubmitRosterImgBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight=".25"
            android:background="#00FFFFFF"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ft_people_icon_30dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menuFormationToggleTeamColorsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_weight=".75"
        android:background="@drawable/border_shape"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuFormationSubmitRosterLayout">

        <TextView
            android:id="@+id/menuFormationToggleTeamColorsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight=".75"
            android:gravity="center"
            android:hapticFeedbackEnabled="true"
            android:text="Toggle Team Colors" />

        <CheckBox
            android:id="@+id/menuFormationToggleTeamColorsCheckBox"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight=".25" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menuFormationResetPlayersLayout"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="3dp"
        android:background="@drawable/border_shape"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuFormationToggleTeamColorsLayout">

        <TextView
            android:id="@+id/menuFormationResetPlayersTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight=".75"
            android:gravity="center"
            android:text="Reset Formation" />

        <ImageButton
            android:id="@+id/menuFormationResetPlayersImgBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight=".25"
            android:background="#00FFFFFF"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ft_people_icon_30dp" />
    </LinearLayout>

</io.usys.report.ui.views.LudiConstraintLayout>
