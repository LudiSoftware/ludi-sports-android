<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="3dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="3dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardMaxElevation="5dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="200dp"
        android:layout_height="90dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cardPlayerMediumGridImgProfile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ysr_empty_profile_icon_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.145" />

        <TextView
            android:id="@+id/cardPlayerMediumGridTxtName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="12sp"
            android:drawablePadding="25dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="Player Name"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/cardPlayerMediumGridImgProfile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/cardPlayerMediumGridImgProfile"
            app:layout_constraintTop_toTopOf="@+id/cardPlayerMediumGridImgProfile"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintVertical_chainStyle="packed" />

        <ImageView
            android:id="@+id/cardPlayerMediumGridImgArrow"
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardPlayerMediumGridTxtName"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/button_arrow_right_small" />

        <TextView
            android:id="@+id/cardPlayerMediumGridTxtOne"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Text One"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/cardPlayerMediumGridImgIconOne"
            app:layout_constraintEnd_toStartOf="@+id/cardPlayerMediumGridImgArrow"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/cardPlayerMediumGridImgIconOne"
            app:layout_constraintTop_toTopOf="@+id/cardPlayerMediumGridImgIconOne" />

        <TextView
            android:id="@+id/cardPlayerMediumGridTxtTwo"
            android:layout_width="133dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="Text Two"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/cardPlayerMediumGridImgIconTwo"
            app:layout_constraintEnd_toStartOf="@+id/cardPlayerMediumGridImgArrow"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/cardPlayerMediumGridImgIconTwo"
            app:layout_constraintTop_toBottomOf="@+id/cardPlayerMediumGridTxtOne" />

        <ImageView
            android:id="@+id/cardPlayerMediumGridImgIconTwo"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardPlayerMediumGridImgIconOne"
            app:srcCompat="@drawable/ysr_email_icon_red" />

        <ImageView
            android:id="@+id/cardPlayerMediumGridImgIconOne"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardPlayerMediumGridImgProfile"
            app:srcCompat="@drawable/org_blue"
            app:tint="#FF0000" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>


