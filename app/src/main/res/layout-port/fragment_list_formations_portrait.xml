<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TryoutTestFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/motion_scene_drawer"
    tools:ignore="MissingDefaultResource">

    <!-- Global Soccer Ball Menu -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/tryoutFormationFloatingActionButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:src="@drawable/soccer_ball_icon"
        app:backgroundTint="@color/transparent"
        app:fabSize="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxImageSize="45dp"
        app:rippleColor="@color/transparent" />

    <!-- The Soccer Field -->
    <RelativeLayout
        android:id="@+id/tryoutsRootViewRosterFormation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/soccer_field"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/ysrTORecycler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </RelativeLayout>

    <!-- The Roster List -->
    <ImageButton
        android:id="@+id/formationBtnRosterToggle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/ysrTORecycler"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/add_light" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ysrTORecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        tools:itemCount="2"
        tools:listitem="@layout/card_player_tiny"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tryoutsRootViewRosterFormation"/>

</androidx.constraintlayout.motion.widget.MotionLayout>