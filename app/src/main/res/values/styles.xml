<resources>

    <style name="LudiSplash" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorAccent">@color/transparent</item>
        <item name="android:windowBackground">@drawable/arizona_sunset_landscapeone</item>
        <item name="android:textColor">@color/transparent</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="LudiSplash.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/transparent</item>
    </style>
    <style name="LudiSplash.BottomNavigationTheme">
        <item name="colorPrimary">@color/transparent</item>
        <item name="android:textColorSecondary">@color/transparent</item>
        <item name="android:background">@color/transparent</item>
        <item name="enforceTextAppearance">false</item>
    </style>

    <style name="LudiButton" parent="Widget.AppCompat.Button">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/ludiBlue</item>
        <item name="android:autoSizeMaxTextSize">20sp</item>
        <item name="android:autoSizeMinTextSize">10sp</item>
        <item name="android:autoSizePresetSizes">15sp</item>
    </style>

    <style name="LudiTextViewField" parent="Widget.AppCompat.TextView">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/ludiBlue</item>
        <item name="android:autoSizeMaxTextSize">20sp</item>
        <item name="android:autoSizeMinTextSize">10sp</item>
        <item name="android:autoSizePresetSizes">15sp</item>
    </style>


    <!-- Custom TabLayout style -->
    <style name="YSR.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabBackground">@color/tabBackground</item>
        <item name="tabTextColor">@color/tabUnselectedTextColor</item>
        <item name="tabSelectedTextColor">@color/tabSelectedTextColor</item>
        <item name="tabIndicatorColor">@color/tabIndicatorColor</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextAppearance">@style/YSR.TabLayout.Text</item>
    </style>

    <!-- Custom TabLayout text style -->
    <style name="YSR.TabLayout.Text" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:textSize">@dimen/tabTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>


    <!-- Base application theme. -->
    <style name="YSR" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ysrWindowBackground</item>
        <item name="colorPrimaryDark">@color/ludiBlack</item>
        <item name="colorAccent">@color/ysrRed</item>
        <item name="android:windowBackground">@color/ysrWindowBackground</item>
        <item name="android:textColor">@color/ludiBlue</item>
        <item name="android:statusBarColor">@color/ysrWindowBackground</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Global PopUp/Dialog/UIAlertView Theme -->
    <style name="YSR.DialogTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:buttonStyle">@style/YSR</item>
    </style>

    <!-- Global Button Theme -->
    <style name="YSR.Button">
        <item name="android:textColor">@color/ludiBlue</item>
        <item name="colorButtonNormal">@color/ludiWhite</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <!-- Global Bottom Tab Bar Theme -->
    <style name="YSR.BottomNavigationTheme">
        <item name="colorPrimary">@color/ysrFadedWhite</item>
        <item name="android:textColorSecondary">@color/ysrFadedWhite</item>
        <item name="android:background">@color/transparent</item>
        <item name="enforceTextAppearance">false</item>
    </style>

    <style name="YSR.RatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="android:layout_marginEnd">-15dp</item>
    </style>

    <style name="YSR.ActionBar" parent="MaterialAlertDialog.Material3">
        <item name="android:background">@color/ysrBlue</item>
    </style>

    <style name="FT_Dialog" parent="Theme.AppCompat.Light">
        <item name="android:windowMinWidthMajor">75%</item>
        <item name="android:windowMinWidthMinor">75%</item>
    </style>

    <style name="YSR.AppBarOverlay." parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/ysrFadedWhite</item>
    </style>

    <style name="YSR.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/ysrFadedWhite</item>
    </style>
    <style name="YSR.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
