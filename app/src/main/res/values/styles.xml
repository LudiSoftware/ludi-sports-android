<resources>

    <style name="LudiSplash" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorAccent">@color/transparent</item>
        <item name="android:windowBackground">@drawable/arizona_sunset_landscapeone</item>
        <item name="android:textColor">@color/transparent</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="LudiSplash.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/transparent</item>
    </style>
    <style name="LudiSplash.BottomNavigationTheme">
        <item name="colorPrimary">@color/transparent</item>
        <item name="android:textColorSecondary">@color/transparent</item>
        <item name="android:background">@color/transparent</item>
        <item name="enforceTextAppearance">false</item>
    </style>

    <style name="LudiTextViewField" parent="Widget.AppCompat.TextView">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/ysrDarkBlue</item>
        <item name="android:autoSizeMaxTextSize">20sp</item>
        <item name="android:autoSizeMinTextSize">10sp</item>
        <item name="android:autoSizePresetSizes">15sp</item>
    </style>




    <!-- Base application theme. -->
    <style name="YSR" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ysrFadedWhite</item>
        <item name="colorPrimaryDark">@color/ysrRed</item>
        <item name="colorAccent">@color/ysrRed</item>
        <item name="android:windowBackground">@color/ysrWindowBackground</item>
        <item name="android:textColor">@color/ysrDarkBlue</item>
        <item name="android:statusBarColor">@color/ysrWindowBackground</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Global PopUp/Dialog/UIAlertView Theme -->
    <style name="YSR.DialogTheme" parent="Theme.AppCompat.Light">
        <item name="android:buttonStyle">@style/YSR</item>
    </style>

    <!-- Global Button Theme -->
    <style name="YSR.Button">
        <item name="android:textColor">@color/ysrFadedWhite</item>
        <item name="colorButtonNormal">@color/ysrDarkBlue</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <!-- Global Bottom Tab Bar Theme -->
    <style name="YSR.BottomNavigationTheme">
        <item name="colorPrimary">@color/ysrFadedWhite</item>
        <item name="android:textColorSecondary">@color/ysrFadedWhite</item>
        <item name="android:background">@color/transparent</item>
        <item name="enforceTextAppearance">false</item>
    </style>

    <style name="YSR.RatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="android:layout_marginEnd">-15dp</item>
    </style>

<!--    <style name="YSR.ActionBar">-->
<!--        <item name="android:background">@color/ysrBlue</item>-->
<!--    </style>-->

    <style name="FT_Dialog" parent="Theme.AppCompat.Light">
        <item name="android:windowMinWidthMajor">75%</item>
        <item name="android:windowMinWidthMinor">75%</item>
    </style>

    <style name="YSR.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/ysrFadedWhite</item>
    </style>
    <style name="YSR.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
